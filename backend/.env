# Enhanced Pong Backend - Development Environment

# Server Configuration
NODE_ENV=development
HOST=localhost
PORT=3001

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/enhanced-pong.db

# JWT Secrets (Change these in production!)
JWT_ACCESS_SECRET=enhanced-pong-access-secret-dev
JWT_REFRESH_SECRET=enhanced-pong-refresh-secret-dev
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@enhanced-pong.local
ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=debug